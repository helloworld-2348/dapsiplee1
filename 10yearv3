    <script>
        function wrapLabel(label, maxWidth) {
            const words = label.split(' ');
            let lines = [];
            let currentLine = words[0];

            if (!label || label.length <= maxWidth) {
                return label;
            }

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + ' ' + words[i]).length > maxWidth) {
                    lines.push(currentLine);
                    currentLine = words[i];
                } else {
                    currentLine += ' ' + words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            } else {
                return label;
            }
        };

        const ageData = {
            labels: [
                wrapLabel('20대', 16), 
                wrapLabel('30대', 16), 
                wrapLabel('70대 이상', 16), 
                wrapLabel('50대', 16), 
                wrapLabel('60대', 16), 
                wrapLabel('40대', 16), 
                wrapLabel('학생/어린이', 16)
            ],
            datasets: [{
                label: '성도 수',
                data: [52, 24, 18, 13, 9, 9, 7], // [cite: 4]
                backgroundColor: [
                    '#0a9396', // 청년층 강조색
                    '#94d2bd',
                    '#e9d8a6',
                    '#ee9b00',
                    '#ca6702',
                    '#bb3e03',
                    '#ae2012'
                ],
                borderColor: '#ffffff',
                borderWidth: 2,
                hoverOffset: 4
            }]
        };

        const ageCtx = document.getElementById('ageDistributionChart').getContext('2d');
        new Chart(ageCtx, {
            type: 'doughnut',
            data: ageData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: {
                                family: "'Noto Sans KR', sans-serif"
                            },
                            // Chart.js 3.x uses 'generateLabels' for more control, 
                            // but simpler to just ensure labels are short or arrays.
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                }
            }
        });

        const attendanceData = {
            labels: [
                wrapLabel('등록 교인', 16), // [cite: 3]
                wrapLabel('대예배 출석', 16), // [cite: 7]
                wrapLabel('안식일학교 출석', 16) // [cite: 7]
            ],
            datasets: [{
                label: '출석 현황 (명)',
                data: [132, 80, 50], // [cite: 3, 7] - 70~80명 중 80명으로 표시
                backgroundColor: ['#005f73', '#0a9396', '#94d2bd'],
                borderColor: ['#001219', '#001219', '#001219'],
                borderWidth: 1,
                borderRadius: 5
            }]
        };
        
        const attendanceCtx = document.getElementById('attendanceChart').getContext('2d');
        new Chart(attendanceCtx, {
            type: 'bar',
            data: attendanceData,
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
